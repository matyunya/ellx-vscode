{
	"name": "ellx",
	"displayName": "ellx",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ellx.run"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Ellx",
			"properties": {
				"ellx.user": {
					"type": ["string", "null"],
					"default": null,
					"description": "Ellx username"
				},
				"ellx.trust": {
					"type": "string",
					"default": "https://api.ellx.io/certificate",
					"description": "Ellx certificate issuing endpoint"
				},
				"ellx.identity": {
					"type": "string",
					"default": "localhost~3002",
					"description": "Ellx file server identity"
				},
				"ellx.port": {
					"type": "number",
					"default": 3002,
					"description": "Server port"
				},
				"ellx.clientUrl": {
					"type": "string",
					"default": "https://ellx.io",
					"description": "Ellx client URL (most likely https://ellx.io)"
				}
			}
		},
		"commands": [
			{
				"command": "ellx.run",
				"title": "Ellx: start"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"command-line-args": "^5.1.1",
		"cors": "^2.8.5",
		"elliptic": "^6.5.3",
		"mime": "^2.4.6",
		"node-fetch": "^2.6.0",
		"polka": "^0.5.2",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"@types/body-parser": "^1.19.0",
		"@types/command-line-args": "^5.0.0",
		"@types/cors": "^2.8.10",
		"@types/elliptic": "^6.4.12",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.14.31",
		"@types/node-fetch": "^2.5.8",
		"@types/polka": "^0.5.2",
		"@types/vscode": "^1.53.0",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-node": "^9.1.1",
		"tsc": "^1.20150623.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
